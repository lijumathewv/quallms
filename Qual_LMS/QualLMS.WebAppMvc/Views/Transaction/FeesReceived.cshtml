@using System.Text.Json
@using QualLMS.Domain.APIModels

@model List<FeesReceivedData>

@{
    var data = JsonSerializer.Serialize(Model);
}

@section StylesAndScripts {
    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>
}

<div class="form-row">
    <div class="col-md-1 md-3">
        <a href="/AddReceipts" class="btn btn-outline-primary">Add New</a>
    </div>
    <div class="col-md-12 md-3">
        &nbsp;
    </div>
    <div class="col-md-12 md-3">
        <div id="myGrid" class="ag-theme-quartz" style="height: 500px"></div>
    </div>
    @if (ViewBag.IsError != null)
    {
        if (ViewBag.IsError)
        {
            <div class="form-group">
                <div class="alert alert-danger" role="alert">
                    @Html.Raw(ViewBag.ErrorMessage)
                </div>
            </div>
        }
    }
    @if (ViewBag.IsSuccess != null)
    {
        if (ViewBag.IsSuccess)
        {
            <div class="form-group">
                <div class="alert alert-success" role="alert">
                    @Html.Raw(ViewBag.SuccessMessage)
                </div>
            </div>
        }
    }
</div>

