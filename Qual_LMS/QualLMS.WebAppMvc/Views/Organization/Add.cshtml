@using QualLMS.Domain.APIModels
@model OrganizationData

<!-- main-heading -->
<h2 class="main-title-w3layouts mb-2 text-center">Add Organization</h2>
<!--// main-heading -->
<!-- Forms content -->
<section class="forms-section">
    <div class="container-fluid">
        <div class="row">
            <div class="outer-w3-agile col-xl mt-3">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Full Name</label>
                        <input type="text" class="form-control" name="FullName" value="@Model.FullName" placeholder="Full name is mandatory" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Email address</label>
                        <input type="email" class="form-control" name="EmailId" value="@Model.EmailId" placeholder="name@example.com" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Phone Number</label>
                        <input type="tel" class="form-control" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="PhoneNumber is mandatory" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Address</label>
                        <input type="text" class="form-control" name="Address" value="@Model.Address" placeholder="Address is mandatory" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Domain Name</label>
                        <input type="text" class="form-control" name="DomainName" value="@Model.DomainName" placeholder="DomainName is mandatory" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Geo Location</label>
                        <input type="text" class="form-control" name="OfficeGeoLocation" value="@Model.OfficeGeoLocation" placeholder="Geo Location is mandatory" required="">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                    @if (ViewBag.IsError)
                    {
                        <div class="form-group">
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        </div>
                    }
                    @if (ViewBag.IsSuccess)
                    {
                        <div class="form-group">
                            <div class="alert alert-success" role="alert">
                                @ViewBag.SuccessMessage
                            </div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</section>
